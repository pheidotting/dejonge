<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd" >
<log4j:configuration>
	<!-- APPENDERS LIST -->
	<!-- show log entries on console -->
	<appender name="consoleAppender" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ABSOLUTE} %5p %c{1}:%L - %m%n" />
		</layout>
	</appender>

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="target" value="System.out" />
		<param name="threshold" value="debug" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ISO8601} %-5p [%c{1}] - %m%n" />
		</layout>
	</appender>

    <appender name="debugFileAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="/var/log/djfc/djfc-relatiebeheer-debug.log"/>
		<param name="immediateFlush" value="true"/>
		<param name="threshold" value="debug"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
		<layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%p] %d %c %M - %m%n"/>
		</layout>
	</appender>

    <appender name="errorFileAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="/var/log/djfc/djfc-relatiebeheer-error.log"/>
		<param name="immediateFlush" value="true"/>
        <param name="threshold" value="error"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
		<layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%p] %d %c %M - %m%n"/>
		</layout>
	</appender>

    <appender name="log4javascriptFileAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="/var/log/djfc/djfc-log4javascript.log"/>
        <param name="immediateFlush" value="true"/>
        <param name="threshold" value="debug"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%p] %d %c %M - %m%n"/>
        </layout>
    </appender>

    <appender name="authorisatieFileAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="/var/log/djfc/djfc-authorisatie.log"/>
        <param name="immediateFlush" value="true"/>
        <param name="threshold" value="debug"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%p] %d %c %M - %m%n"/>
        </layout>
    </appender>

	<logger name="javax.enterprise.system">
		<level value="error"/>
	</logger>
	<logger name="javax.persistence">
		<level value="info"/>
	</logger>
	<logger name="org.springframework">
		<level value="info"/>
	</logger>
	<logger name="org.apache">
		<level value="error"/>
	</logger>
	<logger name="org.hibernate">
		<level value="error"/>
	</logger>
	<logger name="ch.vorburger">
		<level value="off"/>
	</logger>
    <logger name="nl.dias.service.AuthorisatieService" additivity="false">
		<level value="info" />
        <appender-ref ref="authorisatieFileAppender"/>
	</logger>
    <logger name="nl.dias.web.filter" additivity="false">
		<level value="debug" />
        <appender-ref ref="authorisatieFileAppender"/>
	</logger>
	<logger name="nl.dias">
		<level value="debug" />
	</logger>
	<logger name="nl.dias.web.medewerker.JsonController">
		<level value="trace" />
	</logger>
    <logger name="nl.dias.web.authorisatie.Log4JController" additivity="false">
        <level value="trace"/>
        <appender-ref ref="log4javascriptFileAppender"/>
    </logger>
	<logger name="org.dozer">
		<level value="error" />
	</logger>

	<root>
		<priority value="debug"></priority>
		<appender-ref ref="console" />
		<appender-ref ref="debugFileAppender" />
		<appender-ref ref="errorFileAppender" />
	</root>
</log4j:configuration>