    <bean id="polisVerwijderenRequestSender" class="nl.dias.messaging.sender.PolisVerwijderenRequestSender">
        <constructor-arg index="0" ref="polisVerwijderenRequestTemplate"/>
    </bean>

    <!-- Entiteiten opslaan -->
